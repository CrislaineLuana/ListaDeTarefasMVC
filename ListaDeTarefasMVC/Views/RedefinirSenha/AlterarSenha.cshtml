@model AlterarSenhaModel
@{
	ViewData["Title"] = "Alterar Senha";
}



<div class="" >
    <h3 class="mb-4 display-5"><b>Alterar senha usuário</b></h3>
    @if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

	<form asp-controller="RedefinirSenha" asp-action="AlterarSenha" method="post">

      <div class="mb-3">
        <label for="inputLogin" class="form-label">Senha atual:</label>
        <input type="password" asp-for="SenhaAtual" class="form-control" id="inputTarefa">
        <span asp-validation-for="SenhaAtual" ></span>
      </div>

       <div class="mb-3">
        <label for="inputLogin" class="form-label">Nova senha:</label>
        <input type="password" asp-for="NovaSenha" class="form-control" id="inputTarefa">
        <span asp-validation-for="NovaSenha" ></span>
      </div>

      <div class="mb-3">
        <label for="inputLogin" class="form-label">Confirmar Nova Senha:</label>
        <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" id="inputTarefa">
        <span asp-validation-for="ConfirmarNovaSenha" ></span>
      </div>

      <button type="submit" class="btn btn-success mb-3 w-100"> Alterar senha</button>
      <a role="button" class="btn btn-secondary w-100" asp-controller="Usuario" asp-action="Index"><i class="bi bi-arrow-counterclockwise"></i> Voltar</a>
    </form>
</div>